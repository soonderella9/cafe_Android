<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.gginiggini.Activity.Home">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:background="#EF6C00">
    </android.support.v7.widget.Toolbar>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:id="@+id/rela1">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rela2">
        <TextView
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:textSize="20dp"
            android:background="#FFFDE7"
            android:gravity="center"
            android:text="제목 : "
            android:id="@+id/complain_title"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textSize="20dp"
            android:background="#FFFDE7"
            android:layout_toRightOf="@+id/complain_title"
            android:id="@+id/complain_titleInfo"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rela2"
            android:id="@+id/rela3">
        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:textSize="15dp"

            android:gravity="center"
            android:text="내용 : "
            android:id="@+id/complain_content"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/complain_content"
            android:gravity="top"
            android:textSize="15dp"
            android:id="@+id/complain_contentInfo"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rela3"
            android:id="@+id/rela4">
        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:gravity="center"
            android:text="답변 : "
            android:id="@+id/complain_reply"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/complain_reply"
            android:textSize="15dp"
            android:id="@+id/complain_replyInfo"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>